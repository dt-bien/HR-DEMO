@{
    ViewData["Title"] = "Details";
}
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
<h1>Details</h1>

<div>
    <h4>EmpInfo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Employee Id
        </dt>
        <dd class = "col-sm-10" id="IdEmp">
          
        </dd>
        <dt class = "col-sm-2">
           Social Number
        </dt>
        <dd class = "col-sm-10" id="SocialNumber">
           
        </dd>
        <dt class = "col-sm-2">
            Full Name
        </dt>
        <dd class = "col-sm-10" id="Name">
            
        </dd>
        <dt class = "col-sm-2">
            Age
        </dt>
        <dd class = "col-sm-10" id="Age">
            
        </dd>
        <dt class = "col-sm-2">
            Address
        </dt>
        <dd class = "col-sm-10" id="Address">
            Address
        </dd>
        <dt class = "col-sm-2">
           Photo
        </dt>
        <dd class = "col-sm-10">
          
          <img src="" id="photo"  width="100" height="80" />
         
        </dd>
        <dt class = "col-sm-2">
           Updated
        </dt>
        <dd class = "col-sm-10" id="Updated">
            
        </dd>
        <dt class = "col-sm-2">
            JoinDay
        </dt>
        <dd class = "col-sm-10" id="JoinDay">
            
        </dd>
        <dt class = "col-sm-2">
            Leave Day
        </dt>
        <dd class = "col-sm-10" id="LeaveDay">
           
        </dd>
        <dt class = "col-sm-2">
            Position
        </dt>
        <dd class = "col-sm-10" id="Position">
           
        </dd>
    </dl>
</div>
<div>
    <a >Edit</a> |
    <a >Back to List</a>
</div>

<script>
    $(document).ready(function () {
        var id = @ViewBag.Id;
       
        
        $.ajax({
            type: "GET",
            url: "https://localhost:5001/empinfo/EmpDetails/"+id+"",

            success: function (data) {

                $("#IdEmp").text(data.idEmp);
                $("#SocialNumber").text(data.socialNumber);
                $("#Name").text(data.name);
                $("#Age").text(data.age);
                $("#Address").text(data.address);
                $("#Updated").text(data.updated);
                $("#JoinDay").text(data.joinDay);
                $("#LeaveDay").text(data.leaveDay);
                $("#Position").text(data.position.namePos);

                $("#photo").attr("src", "data:image/jpg;base64," + data.photo + "");
                
            },
           
            error: function (data) {
               
                console.log("Error ", data);
            }
        })
    });

   
</script>